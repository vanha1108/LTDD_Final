<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:text="Add Grade"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:text="Enter New Subject"
        android:id="@+id/edtNewSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />


    <EditText
        android:text="Enter Half Score"
        android:id="@+id/edtHalfScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <EditText
        android:text="Enter Final Score"
        android:id="@+id/edtFinalScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddGrade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btnCloseGrade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</LinearLayout>